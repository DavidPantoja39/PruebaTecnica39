import json
import boto3
import requests
from datetime import datetime

s3 = boto3.client('s3')

BUCKET_NAME = 'galactic-services-39'
S3_KEY_PREFIX = 'raw/'
BASE_URL = 'https://swapi.info/api/people/'

def lambda_handler(event, context):
    try:
        timestamp = datetime.utcnow().strftime('%Y%m%dT%H%M%SZ')

        for i in range(1, 83):
            url = f"{BASE_URL}{i}"
            try:
                head_response = requests.head(url, allow_redirects=True, timeout=5)
                if head_response.status_code != 200:
                    print(f"URL no v√°lida o no disponible: {url} (Status: {head_response.status_code})")
                    continue
            except requests.RequestException as head_err:
                print(f"Error al verificar la URL {url}: {head_err}")
                continue

            response = requests.get(url)
            response.raise_for_status()

            data = response.json()
            json_data = json.dumps(data, indent=2)

            file_name = f"{S3_KEY_PREFIX}data_{i}_{timestamp}.json"
            s3.put_object(
                Bucket=BUCKET_NAME,
                Key=file_name,
                Body=json_data,
                ContentType='application/json'
            )

        return {
            'statusCode': 200,
            'body': 'Los 83 JSON fueron guardados en S3.'
        }

    except Exception as e:
        return {
            'statusCode': 500,
            'body': f'Error: {str(e)}'
        }
